extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='./assets/js/about.bundle.js')

block content
  section.hero
    h2.visually-hidden Страница "Обо мне"
    include ../common/header
    .hero__content
      .section-title.section-title--bg--portfolio
      +user('./assets/images/photo.jpg', 'Евгений Щербаков', 'Личный сайт веб разработчика', 'hero__user')
    a.btn-down.hero__btn(href="#about")
      +icon('arrow_down', 'btn-down__icon')

  main.about#about
    +triangles('triangles--about')
    h2.visually-hidden Основной контент "Обо мне"
    .about__left
      .about__left-content
        .about__left-title
          h1.title-h1.title-h1--about= title
        .user-profile.about__profile
          .user-profile__image
            img(src="./assets/images/photo.jpg" alt="фотография").user-profile__avatar
          .user-profile__description
            h2.title-h2.user-profile__title Кто я
            .user-profile__text.text-content
              p Я веб разработчик из Орехово-Зуево. Мне 26 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
              p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите,как тут всё классно и красиво!
    .about__right
      .about__right-content
        h2.title-h2.about__right-title
          | Чем я могу быть
          br
          |  вам полезен
        .about__right-description
          .about__right-text Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
          #skills-wrapper
  section.map
    h2.title-h2.visually-hidden Карта
    .google-map
    .map__content
      .contacts
        h2.title-h2.contacts__title Контакты
        address.contacts__content
          ul.contacts__list
            each item in contacts
              li.contacts__item
                .contacts__item-icon
                  +icon(`${item[0]}`, 'contacts__item-icon-img')
                a.contacts__item-title(href=(item[2] != '') ? `${item[2]}` : '#') #{item[1]}